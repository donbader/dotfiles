{
  "$schema": "https://opencode.ai/config.json",
  // Theme configuration
  "theme": "gruvbox",
  "model": "github-copilot/claude-sonnet-4.5",
  "autoupdate": true,
  "agent": {
    "build": {
      "disable": true
    },
    "plan": {
      "disable": true
    },
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "tavily": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "tavily-mcp@0.1.2"
      ],
      "environment": {
        "TAVILY_API_KEY": "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"
      },
      "enabled": true,
    },
    "shadcn": {
      "type": "local",
      "command": [
        "npx",
        "shadcn@latest",
        "mcp"
      ],
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "chrome-devtools-mcp@latest"
      ],
      "enabled": true
    },
    "grep": {
      "type": "local",
      "command": [
        "uvx",
        "grep-mcp"
      ],
      "enabled": true
    }
  }
}