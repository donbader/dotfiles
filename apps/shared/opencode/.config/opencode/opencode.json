{
  "$schema": "https://opencode.ai/config.json",
  // Theme configuration
  "theme": "gruvbox",
  // "model": "github-copilot/claude-sonnet-4.5",
  "model": "openai/gpt-5.2-codex",
  // "small_model": "openai/gpt-5-codex-mini",
  "autoupdate": true,
  "mcp": {
    "domain-search": {
      "type": "remote",
      "url": "https://instantdomainsearch.com/mcp/streamable-http",
      "enabled": false
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "tavily": {
      "type": "local",
      "command": ["npx", "-y", "tavily-mcp@0.1.2"],
      "environment": {
        "TAVILY_API_KEY": "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"
      },
      "enabled": true
    },
    "shadcn": {
      "type": "local",
      "command": ["npx", "shadcn@latest", "mcp"],
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"],
      "enabled": true
    },
    "grep": {
      "type": "local",
      "command": ["uvx", "grep-mcp"],
      "enabled": true
    }
  }
}
